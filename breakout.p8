pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
-- initial values
ball = {
 x = 1, 
 y=40, 
 dx=2, 
 dy=2, 
 r=2, 
 col=1
}

-- pulsating effect variables
pulsespeed = 0.5  -- adjust this value to control the pulsating speed
pulsedirection = 1  -- 1 for increasing, -1 for decreasing


function _update()
	ball.col += 1
	
	-- pulsate the radius of the ball between 1 and 2
 ball.r = ball.r + pulsespeed * pulsedirection
 if ball.r <= 2 or ball.r >= 3 then
  pulsedirection = -pulsedirection
 end
		
 -- update poo and pee positions
 ball.x, ball.dx = updateposition(ball.x, ball.dx)
 ball.y, ball.dy = updateposition(ball.y, ball.dy)
end

function updateposition(pos, speed)
 pos = pos + speed
    
 if pos > 122 or pos < 0 then
  speed = -speed
  sfx(0)
 end
 
 return pos, speed
end

function _draw()
 cls()
 circfill(ball.x, ball.y, ball.r, ball.col)
end

